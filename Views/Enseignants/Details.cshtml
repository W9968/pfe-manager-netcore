@model WALASEBAI.Models.Enseignant

@{
    ViewData["Title"] = "Details";
}


<div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
    <div class="page-title d-flex flex-column gap-1 me-3 mb-2">
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold mb-6">
            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">
                <a href="../dist/index.html" class="text-gray-500">
                    <i class="ki-duotone ki-home fs-3 text-gray-400 me-n1"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
            </li>
            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Apps</li>
            <li class="breadcrumb-item">
                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
            </li>
            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Enseignants</li>
            <li class="breadcrumb-item">
                <i class="ki-duotone ki-right fs-4 text-gray-700 mx-n1"></i>
            </li>
            <li class="breadcrumb-item text-gray-700 fw-bold lh-1">Details</li>
        </ul>
        <h1 class="page-heading d-flex flex-column justify-content-center text-dark fw-bolder fs-1 lh-0">Enseignants</h1>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info">Edit</a>
        <a asp-action="Index" class="btn btn-danger ms-3 px-4 py-3">Back to list</a>
    </div>

</div>

<hr />
<br />


<div class="card mb-5 mb-xl-10">
    <div class="card-body p-9">
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Prenom)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Prenom)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CIN)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CIN)
            </dd>
        </dl>
    </div>
</div>


<div class="app-content flex-column-fluid">
    <div class="card card-flush">
        <div class="card-header align-items-center py-5 gap-2 gap-md-5">
            <h4>Associated pfe List</h4>
        </div>
        <div class="card-body pt-0">
        <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                <thead class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PFEs.First().Titre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PFEs.First().Desc)
                    </th>
                </tr>
            </thead>
                <tbody class="fw-semibold text-gray-600">
                @foreach (var pfe in Model.PFEs)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => pfe.Titre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => pfe.Desc)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>

<div class="app-content flex-column-fluid">
    <div class="card card-flush">
        <div class="card-header align-items-center py-5 gap-2 gap-md-5">
            <h4>Soutenances as President</h4>
        </div>
        <div class="card-body pt-0">
            <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
