            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SoutenancesEnTantQuePresident.First().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoutenancesEnTantQuePresident.First().Heure)
                </th>
            </tr>
        </thead>
        <tbody class="fw-semibold text-gray-600">
            @foreach (var soutenance in Model.SoutenancesEnTantQuePresident)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => soutenance.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => soutenance.Heure)
                    </td>
                </tr>
            }
        </tbody>
            </table>
        </div>
    </div>
</div>

